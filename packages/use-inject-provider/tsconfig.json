{
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src"]
}
